<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.wangfan1314.orikahelper</id>
    <name>Orika Mapping Tracer</name>
    <vendor>JetBrains</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.wangfan1314.orikahelper.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <toolWindow factoryClass="com.github.wangfan1314.orikahelper.ui.CallHierarchyToolWindowFactory" 
                    id="Orika映射调用链" 
                    anchor="bottom" 
                    secondary="true"/>
        <toolWindow factoryClass="com.github.wangfan1314.orikahelper.callhierarchy.ui.CallHierarchyTreeWindowFactory" 
                    id="调用链路" 
                    anchor="bottom" 
                    secondary="true"/>
        <postStartupActivity implementation="com.github.wangfan1314.orikahelper.startup.MyProjectActivity" />
    </extensions>

    <actions>
        <group id="OrikaGroup" text="Orika Mapping Analysis" description="Orika Mapping-related functions">
            <action id="OrikaMappingTracer.ShowMappingRelations"
                    class="com.github.wangfan1314.orikahelper.actions.OrikaMappingTracerAction"
                    text="Show Mapping Relations"
                    description="Shows the Orika mapping relationships for the selected field">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift M"/>
            </action>
            <action id="OrikaMappingTracer.ShowCallHierarchy"
                    class="com.github.wangfan1314.orikahelper.callhierarchy.actions.ShowCallHierarchyAction"
                    text="Show Call Hierarchy"
                    description="Shows the complete call hierarchy for the selected field (including Orika mapping supplements)">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift O"/>
            </action>
        </group>
    </actions>
</idea-plugin>
